void sendMoney(){
    int number,ammount;
    cout<<"Enter Number:";
     cin>>number;
    cout<<endl;
    cout<<"Enter ammount : ";
    cin>>ammount;
    cout<<endl<<endl;
    cout<<"*************"<<endl;
    cout<<"Send Money is Successfull"<<endl;
    cout<<"Send Money is success to "<<number<<endl;
    cout<<"Ammount is "<<ammount<<endl;
    cout<<"*************";
    
}


void bkash(){
    int choice;
    cout<<"1.Send Money"<<endl;
    cout<<"2.Mobile Recharge"<<endl;
    cout<<"3.Payment"<<endl;
    cout<<"4.Cash Out"<<endl;
    cout<<"5.Pay Bill"<<endl;
    cout<<"6.My Bkash"<<endl;
    cout<<"7.Reset PIN";
    cout<<endl;
    cin>>choice;
    switch(choice){
        case 1:
        sendMoney();
        break;
    }
    cout<<endl;
    cout<<endl;
}

void select(){
    string choose;
    cout<<"*********Select One**********"<<endl;
    cout<<"1.Bkash"<<endl;
    cout<<"2.Nagad."<<endl;
    cout<<"Choose : ";
    cin>>choose;
    if(choose=="*247#"){
        bkash();
    }
    else if(choose=="*167#"){
        cout<<"Your Account Balance is : 50,000";
    }
   
}



int main() {
    select();

    return 0;
}
